<launch>
　<arg name="launch_driver" default="true"/>
　<arg name="current_tf" default="/tf"/>
　<arg name="current_pose" default="external/current_pose_talker/pose"/>
　<node pkg="current_pose_talker" exec="current_pose_talker" name="current_pose_talker" output="log" if="$(var launch_driver)">
    <remap from="~/input/tf" to="$(var current_tf)"/>
    <remap from="~/output/pose" to="$(var current_pose)"/>
  </node>
</launch>
